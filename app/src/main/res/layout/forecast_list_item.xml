<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/art_clouds"/>

    <!--<android.support.constraint.Guideline-->
        <!--android:id="@+id/guideline"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:orientation="horizontal"-->
        <!--app:layout_constraintGuide_percent="0.015625"-->
        <!--tools:layout_editor_absoluteY="1dp"-->
        <!--tools:layout_editor_absoluteX="0dp"/>-->

    <TextView
        android:id="@+id/high_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        tools:text="19\u00b0"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/low_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="28dp"
        tools:text="10\u00b0"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/high_temperature"
        android:layout_toStartOf="@+id/high_temperature"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:textColor="#f00"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toRightOf="@+id/weather_icon"
        tools:text="Today, April 03"
        android:layout_alignBaseline="@+id/low_temperature"
        android:layout_alignBottom="@+id/low_temperature"
        android:layout_alignLeft="@+id/weather_description"
        android:layout_alignStart="@+id/weather_description"/>

    <TextView
        android:id="@+id/weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rainy"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/guideline"
        android:layout_toRightOf="@+id/weather_icon"
        />

    <!--<TextView-->
        <!--android:text="Today, April 03"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/textView"-->
        <!--android:layout_alignBaseline="@+id/date"-->
        <!--android:layout_alignBottom="@+id/date"-->
        <!--android:layout_centerHorizontal="true"/>-->

</RelativeLayout>


